{
    "version": 2,
    "builds": [
      {
        "src": "backend/main.py", 
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb", 
          "runtime": "python3.11"
        }
      },
      {
        "src": "frontend/main.py",
        "use": "@vercel/python", 
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.11"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/main.py"
      },
      {
        "src": "/",
        "dest": "frontend/main.py"
      }
    ],
    "env": {
      "PYTHON_VERSION": "3.11"
    },
    "functions": {
      "backend/main.py": {
        "memory": 3008,
        "maxDuration": 300
      },
      "frontend/main.py": {
        "memory": 3008,
        "maxDuration": 300
      }
    }
  }