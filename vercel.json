{
    "version": 2,
    "builds": [
      {
        "src": "backend/main.py",
        "use": "@vercel/python",
        "config": {
          "maxDuration": 500
        }
      },
      {
        "src": "frontend/main.py",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "."
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/main.py"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/main.py"
      }
    ]
}  